int findPosition(int n) 
    {
        int count = 0;
        int pos = 0;
        while(n > 0)
        {
            count += n & 1 == 1 ? 1 : 0;
            pos++;
            n = n >> 1;
        }
        
        if(count == 0 || count > 1)
        {
            return -1;
        }
        return pos;
    }
